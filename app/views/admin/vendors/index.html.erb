<% title 'Listing vendors' %>
<p>(click the vendor's name to edit products)</p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <%= content_tag :th, 'Options', { :colspan => 2, :style => 'text-align: center;' } %>
    </tr>
  </thead>
  <% @vendors.each do |vendor| %>
    <%= content_tag :tr, :class => cycle(nil, 'alt') do %>
      <th><%= link_to vendor.name, admin_vendor_path(vendor) %></th>
      <td><%= link_to 'Edit', edit_admin_vendor_path(vendor) %></td>
      <td>
        <% if vendor.categories.empty? %>
          <%= link_to 'Delete', admin_vendor_path(vendor), :confirm => 'Are you sure?', :method => :delete %></td>
        <% else %>
          Has Categories
        <% end %>
    <% end %>
  <% end %>
  <tr>
    <td colspan="3">
      <%= link_to 'New Vendor', new_admin_vendor_path %>
    </td>
  </tr>
</table>
