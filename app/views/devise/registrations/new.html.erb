<h2>Join the Fry Farms Coop</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :first_name %><br />
  <%= f.text_field :first_name %></p>

  <p><%= f.label :last_name %><br />
  <%= f.text_field :last_name %></p>

  <p><%= f.label :pickup_id, 'Pickup location' %><br />
  <%= f.collection_select :pickup_id, Pickup.active.all, :id, :name, :prompt => true %></p>

  <h3>Contact details</h3>
  <p><%= f.label :email %> (This will be your login)<br />
  <%= f.text_field :email %></p>

  <p><%= f.label :password, 'Password (must be at least 6 characters long)' %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.label :daytime_phone %><br />
  <%= f.text_field :daytime_phone %></p>

  <p><%= f.label :evening_phone %><br />
  <%= f.text_field :evening_phone %></p>

  <h3>Address</h3>
  <p><%= f.label :address1, 'Address line 1' %><br />
  <%= f.text_field :address1 %></p>

  <p><%= f.label :address2, 'Address line 2 (optional)' %><br />
  <%= f.text_field :address2 %></p>

  <p><%= f.label :city %><br />
  <%= f.text_field :city %></p>

  <p><%= f.label :state %><br />
  <%= f.text_field :state, :size => 2 %></p>

  <p><%= f.label :zip %><br />
  <%= f.text_field :zip %></p>

  <p><%= f.submit "Sign up" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
